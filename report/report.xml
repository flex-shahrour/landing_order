                                    <h6>التاريخ</h6>
                                </div>
                                <div class="col-3 float-end text-center">
                                    <span t-field="o.h_date" t-field-options='{"format": "dd/MM/yyyy"}'/>
                                </div>
                                <div class="col-1 float-end" dir="ltr">
                                    <h6>H :</h6>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <div>
                                <div class="col-2 float-end" dir="rtl">
                                    <h6>الموافق</h6>
                                </div>
                                <div class="col-3 float-end text-center">
                                    <span t-field="o.date" t-field-options='{"format": "dd/MM/yyyy"}'/>
                                </div>
                                <div class="col-1 float-end" dir="ltr">
                                    <h6>Date</h6>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>


